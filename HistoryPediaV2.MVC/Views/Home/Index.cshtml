@model List<HistoryPediaV2.Data.Models.Article>
@{
    ViewBag.Title = "Articles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header" >
                <h1>
                    Welcome to HistoryPedia!
                </h1>
            </div>
            <div class="d-flex justify-content-end">
                <blockquote class="blockquote float-right">
                    <p class="mb-4">
                        History is a teacher of life.
                    </p>
                    <footer class="blockquote-footer">
                        Marcus Tullius Cicero
                    </footer>
                </blockquote>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3 class="my-4">
                Popular articles
            </h3>
            <div class="row">
                <div class="col-md-3">
                    <a class="btn btn-outline-info btn-block shadow" asp-action="Edit" asp-controller="Articles" asp-route-id="-1">Add an article</a>
                </div>
                <div class="col-md-5">
                </div>
                <div class="col-md-4">
                    <form method="get">
                        <div class="form-inline form-group d-flex flex-row ">
                            <input name="name" class="form-control shadow mx-2" />
                            <input type="submit" value="Search" class="btn btn-outline-success shadow" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="row my-5 d-flex justify-content-between">
                @foreach (var item in Model)
                {
                    @await Component.InvokeAsync("ArticleCard", new { article =  item})
                }
            </div>
        </div>
    </div>
</div>